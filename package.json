{
  "name": "@jump/monorepo",
  "private": true,
  "version": "2.0.0",
  "description": "Jump",
  "author": {
    "name": "Stephen Handley",
    "email": "stephen@hello10.com",
    "url": "https://hello10.com"
  },
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.19.3",
    "@babel/preset-env": "7.19.4",
    "@babel/preset-react": "7.18.6",
    "babel-jest": "29.3.1",
    "jest": "29.3.1",
    "lerna": "4.0.0",
    "parcel": "2.8.3",
    "standard": "17.0.0"
  },
  "scripts": {
    "bootstrap": "npm install && lerna bootstrap",
    "bootstrap:clean": "npm run clean && npm run bootstrap",
    "build": "lerna exec --parallel -- npm run build",
    "build:clean": "npm run bootstrap:clean && npm run build",
    "build:watch": "lerna exec --parallel -- npm run build:watch",
    "clean": "lerna exec --parallel -- npm run clean && rm -rf ./node_modules && rm -f package-lock.json",
    "link": "lerna exec --parallel -- npm link",
    "lint": "lerna exec --parallel -- npm run lint",
    "lint:fix": "lerna exec --parallel -- npm run lint:fix",
    "prep": "npm run build:clean && npm run lint:fix && npm run test",
    "test": "lerna exec --concurrency 1 -- npm run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
